                    <Label Text="{Binding Detail}" 
                           d:Text="Detail"
                           Style="{DynamicResource ListItemDetailTextStyle}"/>
                  </StackLayout>
                </ViewCell>
              </DataTemplate>
            </ListView.ItemTemplate>
            -->
        </ListView>
    </StackLayout>
</ContentPage>
